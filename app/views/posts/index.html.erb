
<h1>Blog City</h1>

<% @posts.each do |post| %>
<div class="container2">
<ul>
  <li> 
    <h2>
    <%= post.title %>
    </h2>
    <div>
    <%= post.body %>
    </div>
    <%= link_to "View", post_path(post), class: "btn btn-primary btn-xs" %>
  </li>

<% end %>
</ul>
</div>
<%= link_to "Create a Post", new_post_path, class: "btn btn-success btn-lg" %>



